    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch single test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Tests/build/bin/I2c/i2c_driver_tests",
            "args": ["--gtest_filter=I2cTestFixture.test_read_message_from_fake_device"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "re enables randomization",
                    "text": "set disable-randomization off",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch all tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Tests/build/bin/I2c/i2c_driver_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "re enables randomization",
                    "text": "set disable-randomization off",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}